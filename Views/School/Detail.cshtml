@model EscolaDeVoce.Services.ViewModel.SchoolViewModel

@{
    ViewData["Title"] = "School Details";
    Guid Id = Guid.Empty;
    
    if(Model != null){
      Id = @Model.Id;
    }
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Cadastro de Escolas</h3>
  </div>
  <div class="panel-body">
    <a asp-controller="School" asp-action="Index" class="btn btn-primary"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Lista</a>
        @if(Model != null){
        <a href="/School/delete/@Model.Id" class="btn btn-primary"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Deletar</a>
        }
      </div>
      <br />
    <!--action="/category/detail/@Model.Id" method="post"-->
    <form asp-controller="School" asp-action="Detail" asp-route-id="@Id" method="post">    
        <div class="form-group">
            @Html.LabelFor(m => m.name)
            @Html.TextBoxFor(m => m.name, new { @class = "form-control" })
            <!--<label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.name" >-->
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.urlparamname)
            @Html.TextBoxFor(m => m.urlparamname, new { @class = "form-control" })
            <!--<label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.name" >-->
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.defaultcover)
            @Html.TextBoxFor(m => m.defaultcover, new { @class = "form-control" })
            <!--<label for="name">Nome</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.name" >-->
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>


